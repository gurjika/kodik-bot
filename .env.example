# Copy this file to .env and fill in your values

# --- Telegram ---
TELEGRAM_BOT_TOKEN=your_bot_token_here
# Admin group chat ID (negative for groups, e.g. -1001234567890)
ADMIN_GROUP_ID=-1001234567890

# --- OpenAI ---
OPENAI_API_KEY=sk-...
# Model to use (gpt-4o-mini recommended for high-throughput)
OPENAI_MODEL=gpt-4o-mini

# --- Redis ---
REDIS_URL=redis://localhost:6379

# --- Workers ---
# Number of concurrent async workers draining the job queue
NUM_WORKERS=20

# --- Knowledge Base ---
KB_PATH=knowledge_base/data/knowledge.json

# --- Logging ---
LOG_LEVEL=INFO
